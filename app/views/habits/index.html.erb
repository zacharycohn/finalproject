<%= flashNotice(flash[:notice]) %>

<div class="col-md-12">

	<div class="row">
		<div class="col-xs-3">
			<%#= link_to habits_path, :year => @yesterday.year, :month => @yesterday.month, :day => @yesterday.day %>
			<h4><%# link_to "Previous Day", { controller: habits }, :year => @checkinDate.yesterday.year, :month => @checkinDate.yesterday.month, :day => @checkinDate.yesterday.day %>
				<a href="/habits/<%= @checkinDate.yesterday.year%>/<%=@checkinDate.yesterday.month%>/<%=@checkinDate.yesterday.day%>">Previous Day</a>
			<%#= link_to "Previous Day", previousDay_checkins_path, class: 'btn btn-large btn-default' %></h4>
		</div>

		<div class="col-xs-3">
			<h4><%#= link_to habits_path, :year => Date.current.year, :month => Date.current.month, :day => Date.current.day %>
				<a href="/habits/<%=Date.current.year%>/<%=Date.current.month%>/<%=Date.current.day%>">Today</a>
			<%#= link_to "Jump to Today", jumpToToday_checkins_path, class: 'btn btn-large btn-default' %></h4>
		</div>

		<div class="col-xs-3">
			<h4><%#= link_to habits_path, :year => @checkinDate.tomorrow.year, :month => @checkinDate.tomorrow.month, :day => @checkinDate.tomorrow.day %>
				<a href="/habits/<%= @checkinDate.tomorrow.year%>/<%=@checkinDate.tomorrow.month%>/<%=@checkinDate.tomorrow.day%>">Next Day</a>
			<%#= link_to "Next Day", nextDay_checkins_path, class: 'btn btn-large btn-default' %></h4>
		</div>
	</div>

	<h1>Your habits for: <%= @checkinDate.strftime("%a, %B %d") %> </h1>

	<div class"row">
		<div class="col-xs-8">
			<table class="table table-striped">
				<thead>
					<tr>
							<h2><th>Habit</th></h2>
							<th>Green</th>
							<th>Yellow</th>
							<th>Red</th>
					</tr>
				</thead>
				<tbody>
					<% @habits.each do |h| %>
						<tr>
							<td><h3>
								<div class="<%= h.checkins.get_checkin_status(@checkinDate.strftime("%Y-%m-%d")) %>"><%= link_to h.name, stats_habits_path(habit_id: h.id) %></span>
								</h3></td>
							<td><%= buildCheckinLabel(h, "green", @checkinDate.strftime("%Y-%m-%d")) %></td>
							<td><%= buildCheckinLabel(h, "yellow", @checkinDate.strftime("%Y-%m-%d")) %></td>
							<td><%= buildCheckinLabel(h, "red", @checkinDate.strftime("%Y-%m-%d")) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<h3><p><%= link_to "Add a new habit", new_habit_path %></p></h3>
		</div>
		<div class="col-xs-4">
			<table class="table table-striped">
				<thead>
					<h2><th>Monthly Focus</th></h2>
				</thead>
				<tbody>
					<tr>
						<td><h3>
						  <%= render 'goals/display' %>
							<!-- try to use @goals.get_monthly here first. Not gonna work. -->
						</h3></td>
					</tr>
				</tbody>
			</table>
		
			<h3><p><%= link_to "Manage your goals", goals_path %></p></h3>


		</div>
	</div>

</div> 