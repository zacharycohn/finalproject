<% time = Time.new.localtime %>
<% time = time - Checkin.checkinDay.days %>
<% checkinDate = time.strftime("%Y-%m-%d") %>


<% if flash[:notice] == "green" %>
	<div class="alert alert-success" role="alert"><%= "Nice job! Keep it up." %></div>
<% elsif flash[:notice] == "yellow" %>
	<div class="alert alert-warning" role="alert"><%= "Ehh.. is that the best you can do?" %></div>
<% elsif flash[:notice] == "red" %>
	<div class="alert alert-danger" role="alert"><%= "Oh come on. You gonna give up like that?" %></div>
<% end %>

<div class="row">
	<div class="col-md-2">
		<!-- <button type="button" class="btn btn-lg btn-default">Previous Week</button> -->
		<h4><%= link_to "Previous Day", previousDay_checkins_path %></h4>
	</div>

	<div class="col-md-2">
		<h4><%= link_to "Jump to Today", jumpToToday_checkins_path %></h4>
	</div>

	<div class="col-md-2">
			<!-- <button type="button" class="btn btn-lg btn-default">Next Week</button> -->
			<h4><%= link_to "Next Day", nextDay_checkins_path %></h4>
	</div>
</div>

<h1>Your habits for: <%= time.strftime("%a, %B %d") %> </h1>


<div class="col-md-4">
	<table class="table table-striped">
		<thead>
			<tr>
					<h2><th>Habit</th></h2>
					<th>Green</th>
					<th>Yellow</th>
					<th>Red</th>
			</tr>
		</thead>
		<tbody>
			<% @habits.each do |h| %>
				<tr>
					<!-- if active -->
						<%# labelType = "label label-default" %>
						<%# if !(h.checkins.empty?) and (h.checkins.last.date.to_s.include? time.strftime("%Y-%m-%d")) %>
						<%# if !(h.checkins.empty?) and h.checkins.getByDate(checkinDate).last.to_s.include? time.strftime("%Y-%m-%d") %>
						<!-- sets the color of the name label -->
						<% labelType = "label label-default" %>
						<% begin %>
							<% if h.checkins.get_checkin_status %>
								<% labelType = h.checkins.get_checkin_status %>
							<% end %>
						<% rescue %>

						<% end %>

					<td><h3><div class="<%= h.checkins.get_checkin_status %>"><%= h.name %></span></h3></td>
					<td>
						<% if !(h.checkins.empty?) and h.checkins.last_checked_in_today? %>
							<% last_id = h.checkins.last.id %>
							<h3> <%= setLabel("green") %> 
								 <!-- is this worth turning into a helper? or should I just keep it here? -->
								 <%= link_to "Green", habit_checkin_path(status: "green", habit_id: h.id, id: last_id, date: checkinDate), method: 'PATCH' %></span> 
							

								<!--%= buildPatchButton("gree3n", h.id, last_id, checkinDate).html_safe %> </span></h3--> 
							</h3>

						<% else %>
							<h3>
								<%= setLabel("green") %> 
								<%= link_to "Green", habit_checkins_path(status: "green", habit_id: h.id, date: checkinDate), method: 'POST' %> </span>
							</h3>
						<% end %>
					</td>
					<td>
						<% if !(h.checkins.empty?) and h.checkins.last_checked_in_today? %>
							<% last_id = h.checkins.last.id %>
							<h3>
								<%= setLabel("yellow") %> 
								<%= link_to "Yellow", habit_checkin_path(status: "yellow", habit_id: h.id, id: last_id, date: checkinDate), method: 'PATCH' %></span> 
							</h3>
						<% else %>
							<h3>
								<%= setLabel("yellow") %> <%= link_to "Yellow", habit_checkins_path(status: "yellow", habit_id: h.id, date: checkinDate), method: 'POST' %></span> 
							</h3>
						<% end %>
					</td>
					<td>
						<% if !(h.checkins.empty?) and h.checkins.last_checked_in_today? %>
							<% last_id = h.checkins.last.id %>
							<h3>
								<%= setLabel("red") %> 
								<%= link_to "Red", habit_checkin_path(status: "red", habit_id: h.id, id: last_id, date: checkinDate), method: 'PATCH' %> </span>
							</h3>
						<% else %>
							<h3>
								<%= setLabel("red") %> 
								<%= link_to "Red", habit_checkins_path(status: "red", habit_id: h.id, date: checkinDate), method: 'POST' %></span> 
							</h3>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<h3><p><%= link_to "Add a new habit", new_habit_path %></p></h3>
</div>