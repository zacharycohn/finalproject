<% if flash[:error] %>
	<div>
		<%= flash[:error] %>
	</div>
<% end %>

<%= form_for @goal, method: "POST" do |g| %>
	<div>
		<%= g.label "What is your goal?" %>
		<br>
		<%= g.text_area :description, size: "50x5" %> 
	</div>
	<p>
	<div>
		<%= g.label "What type of goal is it?" %>
		<br> 
		<%= g.radio_button :goal_type, "monthly" %>
		<%= g.label "Monthly Focus?", for: "goal_goal_type_monthly" %>
		<br>
		<%= g.radio_button :goal_type, "midterm" %>
		<%= g.label "Mid-term Goal?", for: "goal_goal_type_midterm" %>
		<br>
		<%= g.radio_button :goal_type, "longterm" %>
		<%= g.label "Long-term Goal?", for: "goal_goal_type_longterm" %>
	</div>
	<a class="btn btn-default" href="<%= goals_path %>" role="button">Cancel</a>
	<button type="submit" class="btn btn-primary">Submit</button>
	<%#= g.submit %>
	
<% end %>




